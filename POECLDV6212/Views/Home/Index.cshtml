@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To ABC Retail</h1>
    <p class="lead">Your one-stop store for easy online purchasing.</p>
</div>

<section class="container mt-5" style="color: white;">
    <h2 class="text-center">About Event Ease</h2>
    <p class="text-center">
        The purpose of ABC Retail is to make internet purchasing easier.  Whether you're buying branded apparel, organizing your orders, or buying indulgences, our website guarantees a seamless experience while guaranteeing a secure and safe environment.
    </p>
</section>


<section class="container mt-5">
    <h2 class="text-center mb-4">Our Focus</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm p-3 mb-3" style="background-color: rgba(240, 240, 240, 0.5); border-radius: 10px;">
                <h4 class="text-center">Shopping without effort</h4>
                <p class="text-center">Purchase products with ease.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3 mb-3" style="background-color: rgba(240, 240, 240, 0.5); border-radius: 10px;">
                <h4 class="text-center">Stock Managementt</h4>
                <p class="text-center">Monitor products and orders.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3 mb-3" style="background-color: rgba(240, 240, 240, 0.5); border-radius: 10px;">
                <h4 class="text-center">Customer Satisfaction</h4>
                <p class="text-center">Our top priority is a flawless customer experience, making internet purchasing stress-free..</p>
            </div>
        </div>

        <div class="d-flex justify-content-center gap-4">

            <a class="btn btn-outline-light btn-lg" asp-area="Views" asp-controller="Customer" asp-action="Index">View Customers</a>

            <a class="btn btn-outline-light btn-lg" asp-area="Views" asp-controller="Product" asp-action="Index">View Products</a>

            <a class="btn btn-outline-light btn-lg" asp-area="Views" asp-controller="Order" asp-action="Index">View Orders</a>

        </div>
    </div>
</section>