@model List<POECLDV6212.Models.FileModel>

<h1>Files</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Choose a file to upload</label>
        <input type="file" name="file" class="form-control" />
        <button type="submit" class="btn btn-primary">Upload</button>
    </div>
</form>

@if (Model != null && Model.Count > 0)
{
    <ul>
        @foreach (var file in Model)
        {
            <li>
                @file.Name -
                Size : @file.DisplaySize -
                Last Modified : @file.LastModified??.ToString("g")
                - <a asp-action="DownloadFile" asp-route-fileName="@file.Name">Download</a>
                <form asp-action="DeleteFile" method="post" style="display:inline;">
                    <input type="hidden" name="fileName" value="@file.Name" />
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this file?');">
                        Delete
                    </button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No files found or model is null</p>
}